<Window x:Class="UserLog.RegistUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserLog"
        mc:Ignorable="d"
        Title="RegistUserWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>

            <TextBox x:Name="tbName" Margin="5" />
            <Label Margin="5,1,5,5" Content="Имя" HorizontalAlignment="Center"/>

            <TextBox x:Name="tbLogin" Margin="5" />
            <Label Margin="5,1,5,5" Content="Логин" HorizontalAlignment="Center"/>

            <TextBox x:Name="tbPassword" Margin="5" />
            <Label Margin="5,1,5,5" Content="Пароль" HorizontalAlignment="Center"/>

            <TextBox x:Name="tbPasswordDoube" Margin="5" />
            <Label Margin="5,1,5,5" Content="Повторите пароль" HorizontalAlignment="Center"/>

            <DatePicker Name="dpBithDay" Margin="5"/>

            <Button x:Name="btAdd" Content="Добавить пользователя" 
                    Margin="5" Click="btAdd_Click" />

        </StackPanel>

    </Grid>
</Window>
